<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_rekap"
        android:id="@+id/textViewTitleRekap"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewRekap1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:text="1."
                android:id="@+id/Nomor"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginEnd="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20160501 Ayam goreng 2x10000"
                android:id="@+id/isi"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/Nomor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20000"
                android:id="@+id/totalHarga"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="end"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="textEnd" />
        </RelativeLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewRekap2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Transkasi"
                android:id="@+id/totalTransaksiText"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60000"
                android:id="@+id/totalTransaksi"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="end"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="textEnd" />
        </RelativeLayout>
    </ScrollView>


</LinearLayout>
